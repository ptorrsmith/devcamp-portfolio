<div class="container portfolio-container">

    <div class="row">
        <!-- <p id="notice"><%#= notice %></p> -->

        <div class="col-md-7">
            <%=image_tag @portfolio_item.main_image.to_s, width: '100%' unless @portfolio_item.main_image.nil?%>

        </div>
        <div class="col-md-5">
            <h1>
                <%=@portfolio_item.title%>
            </h1>
            <h3>
                <em>
                    <%=@portfolio_item.subtitle%>
                </em>
            </h3>
            <p>
                <%=@portfolio_item.body%>
            </p>

            <h4>Technologies and practices</h4>

            <% @portfolio_item.technologies.each do |t| %>
            <p>
                <%= t.name %>
            </p>
            <% end %>
            <%= link_to 'Edit', edit_portfolio_item_path(@portfolio_item) if logged_in?(:site_admin) %>
            <%= link_to 'Destroy', portfolio_item_path(@portfolio_item), method: :delete, data: {confirm: "Blow away blog # #{@portfolio_item.id}?"} if logged_in?(:site_admin) %>

        </div>
        <div class="col-md-12">
            <%= link_to 'View all Portfolio Items', portfolio_items_path %>
        </div>
    </div>
</div>

