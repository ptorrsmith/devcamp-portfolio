<p id="notice"><%= notice %></p>

<%=image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil?%>
 <h1><%=@portfolio_item.title%></h1>
    <h3><%=@portfolio_item.subtitle%></h3>
    <p><%=@portfolio_item.body%></p>

    <h2>Technologies used</h2>

    <% @portfolio_item.technologies.each do |t| %>
        <p> <%= t.name %> </p>
    <% end %>
    <hr />

<%= link_to 'Edit', edit_portfolio_item_path(@portfolio_item) %> |
<%= link_to 'Destroy', portfolio_item_path(@portfolio_item), method: :delete, data: {confirm: "Blow away blog # #{@portfolio_item.id}?"} %> |
